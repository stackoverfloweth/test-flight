<%= form_with model: account do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <% account.errors.full_messages_for(:name).each do |message| %>
      <div class="text-errors"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>